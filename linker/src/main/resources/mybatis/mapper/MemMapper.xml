<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linker.login.dao.LoginDao">

	<insert id="insertMem" parameterType="com.linker.login.dto.LoginDto">
		insert into mem values(#{id},#{password}, #{name}, #{birth}, #{address})
	</insert>

	<update id="updateMem" parameterType="com.linker.login.dto.LoginDto">
	update mem set password=#{password}, 
	name=#{name}, birth = #{birth},address=#{address}
	where id=#{id} 
	</update>

	<delete id="deleteMem" parameterType="String">
		delete from mem where id = #{id}
	</delete>

	<select id="idCheck" parameterType="String" resultType="String">
		select id from mem where id =#{id}
	</select>

	<select id="login" parameterType="com.linker.login.dto.LoginDto" 
	resultType="com.linker.login.dto.LoginDto">
	select * from mem where id=#{id} and password=#{password}
	</select> 

</mapper>